async function buildRegistry() {
  return new Promise((resolve, reject) => {
    const process = exec(`bun x shadcn build registry.json --output public/r`);

    process.on("exit", (code) => {
      if (code === 0) {
        resolve(undefined);
      } else {
        reject(new Error(`Process exited with code ${code}`));
      }
    });
  });
}

